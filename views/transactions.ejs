<!-- include header -->
<%- include('include/_header') %>
    <!-- /include header -->

    <!-- Main Site -->
    <main id="site-main">
        <div class="container">
            <div class="box-nav d-flex justify-between">
              <h1>Welcome back <%= user.name %></h1> 
            </div>
        
        <!-- body handling -->
        <body>

                <div class="table-responsive">
                    <table class="table">
                        <thead class="table-light">
                            <tr>
                                <th>Coin</th>
                                <th>Amount</th>
                                <th>Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for (var i=0; i < transactions.length; i++) { %>
                                <tr>
                                    <td>
                                        <%= transactions[i].coinId %>
                                    </td>
                                    <td>
                                        <%= transactions[i].amount %>
                                    </td>
                                    <td>
                                        <%= transactions[i].date %>
                                    </td>
                                </tr>
                                <% } %>
                        </tbody>
                    </table>

                    <button class="btn-42"><span>Add New Transaction</span></button>
        </body>
    </main>