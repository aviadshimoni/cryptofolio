      <% } %>
      <li><a href="/logout">Logout</a></li>
    </ul>
  </nav>

  <div class="content">
    <!-- form handling -->
    <form action="/" method="POST">
        <table class="table text-white">
          <thead class="thead-light">
          <tr>
            <th>id</th>
            <th>Short name</th>
