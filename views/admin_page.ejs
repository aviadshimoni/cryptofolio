<html>
<head>
  <meta name="viewport" content="width=device-width,initial-scale=1.0">
  <title>Cryptofolio | Admin</title>
  <link rel="icon" type="image/png" href="/img/logo.png" />
  <link rel="stylesheet" href="/css/admin.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
  <script src="https://d3js.org/d3.v4.js"></script>
</head>

<body>
<div class="header">
  <nav>
    <div class="logo">
      <img src="/img/logo.png">
      <span>Cryptofolio</span>
    </div>
    <ul>
      <li><a href="/">Home</a></li>
      <li><a href="/transactions">Transactions</a></li>
      <li><a href="/maps">Local Crypto Exchanges</a></li>
      <li><a href="/contact">Contact </a> </li>
      <% if(locals.isAdmin) { %>
        <li><a href="/admin">Admin Dashboard</a></li>
      <% } %>
      <li><a href="/logout">Logout</a></li>
    </ul>
  </nav>

  <div class="content">
    <div class="row">
        <div class="col-8">
            <div id="my_dataviz"></div>
            <script>
                var data = JSON.parse('<%-stats%>');
            </script>
            <script src="http://localhost:3000/js/barplot.js"></script>
        </div>
        <div class="col-4">
            <ul class="list-unstyled">
                <li class="m-2 d-flex justify-content-center">
                    <a href="admin/coord-manager" class="btn btn-light btn-lg active w-50" role="button" aria-pressed="true">Coord Manager</a>
